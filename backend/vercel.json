{
    "version": 2,
    "builds": [
      {
        "src": "backend/api/index.ts",
        "use": "@vercel/node"
      },
      {
        "src": "backend/api/send-message.ts",
        "use": "@vercel/node"
      },
      {
        "src": "frontend/package.json",
        "use": "@vercel/static-build",
        "config": {
          "distDir": "build"
        }
      }
    ],
    "routes": [
      {
        "src": "/api/(.*)",
        "dest": "backend/api/index.ts"
      },
      {
        "src": "/api/send-message",
        "dest": "backend/api/send-message.ts"
      },
      {
        "src": "/(.*)",
        "dest": "/frontend/build/index.html"
      }
    ]
  }